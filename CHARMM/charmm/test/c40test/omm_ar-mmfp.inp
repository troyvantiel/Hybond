   echo "Test NOT performed."
   stop
endif

set eps = 120
set sigma = 3.4
Calc emin = @eps * ?kblz
Calc rmin2 = @sigma * ( 2 ) ** ( 1 / 6 ) / 2
read rtf card
* rtf file
*
33   0
mass 1 lj 40

resi lj 0
atom lj lj 0

end

read param card
* parameter file
*
nonbonded nbxmod 5 atom vatom cdiel switch vswitch -
