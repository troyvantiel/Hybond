generate Ar

set d = 0
label dorcm
scalar x set 0
scalar y set 0
scalar z set 0
set rcm = 
skipe all excl geo
set t = 1
!******************Test spherical geo boundary*********************!

label sphere

      if ?natom gt 1 then
            scalar x set 0
            scalar x set 7 select bynu 2 end
            scalar x set -7 select bynu 3 end
            set rcm = rcm
      endif
      if t eq 1 then
            set where = inside
            coor translate xdir 8
            scalar x stat
      endif
      if t eq 2 then 
             set where = outside
             coor translate xdir -2
       endif
      if t eq 3 then
            set where = symmetric
            coor translate xdir 8
            scalar x stat
      endif
      ! Check spherical MMFP GEO
      mmfp
           geo spherical harm @where @rcm -
           xref 1 yref 1 zref 1 -
           force 10 droff 5.2 select segid ar end
      end

      energy
      set chme = ?ener
      prnlev 0 @pnode
      coor force comp
      scalar xcomp store 1
      scalar ycomp store 2
      scalar zcomp store 3

      prnlev 7 @pnode
      energy omm
      prnlev 5 @pnode
      set omme = ?ener
      prnlev 0 @pnode
      coor force comp
      scalar xcomp mult -1
      scalar xcomp +store 1

      scalar ycomp mult -1
      scalar ycomp +store 2
      scalar zcomp mult -1
      scalar zcomp +store 3
  
      scalar xcomp recall 1
      scalar ycomp recall 2
      scalat zcomp recall 3

      coor stat comp

      prnlev 5 @pnode
      ! Check tolerances
      calc dener = abs ( @chme - @omme )
      calc dforce = sqrt ( ?xave * ?xave + ?yave * ?yave + ?zave * ?zave )
      calc diff = @dforce * @dener

      set status = pass
      if @diff gt @tol then
            set status = fail
      endif
      echo testcase result: @status Test 1 sphere-@t @rcm
      
      mmfp
         geo reset
      end

      incr t by 1
if t le 3 goto sphere

