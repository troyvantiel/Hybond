      set e = ?ener
      energy omm cutnb 14 ctofnb 12 ctonnb 10 cdie atom vatom switch vswitch
      scalar dx stat select bynu 1 end
      set fomm = ?stot
      set eomm = ?ener

      echo @r @e @eomm @f @fomm
      incr r by 0.1
if r le 14 goto r

